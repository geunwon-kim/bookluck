<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.bookluck.repository.ReceiptMapper">

    <insert id="insertReceipt" parameterType="com.study.bookluck.entity.Receipt">
        INSERT INTO receipt (userId, bookId, startDate, endDate, duration, review)
            VALUES (#{userId}, #{bookId}, #{startDate}, #{endDate}, #{duration}, #{review})
    </insert>

    <select id="findByUserId" resultType="com.study.bookluck.entity.Receipt">
        SELECT * FROM receipt
        WHERE userId = #{userId}
    </select>

</mapper>